<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <AssemblyName>Amazon.CloudWatch</AssemblyName>
    <TargetFramework>net9.0</TargetFramework>
    <Version>0.10.0</Version>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    
    <!-- Package Details-->
    <Authors>iamcarbon</Authors>
    <Copyright>© Jason Nelson</Copyright>
    <Description>A modern .NET library for Amazon CloudWatch.</Description>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageTags>cloudwatch;aws;netstandard</PackageTags>
    <RepositoryUrl>https://github.com/carbon/Amazon</RepositoryUrl>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\Amazon.Core\Amazon.Core.csproj" />
  </ItemGroup>

</Project>